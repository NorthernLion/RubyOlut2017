<h2>Rating statistics</h2>



<%= render 'list', rated: @top_breweries %>
<%= render 'list', rated: @top_beers %>
<%= render 'list', rated: @top_styles %>

<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>favorite beer</th>
    <th>prefered style</th>
    <th>favorite brewery</th>
    <th>ratings</th>
  </tr>
  </thead>

  <tbody>
  <% @top_users.each do |u| %>
      <tr>
        <td><%= u.username %></td>
        <td><%= u.favorite_beer %></td>
        <td><%= u.favorite_style %></td>
        <td><%= u.favorite_brewery %></td>
        <td><%= u.ratings.count %></td>
      </tr>
  <% end %>
  </tbody>
</table>


<ul>
  <% @ratings_latest.each do |rating| %>
      <li> <%= rating %> <%= link_to rating.user.username, rating.user %> </li>
  <% end %>
</ul>

<p> <%=link_to 'New Rating', new_rating_path, class:'btn btn-primary'%></p>
